<odoo>
    <data>
        <record id="todo_view_list" model="ir.ui.view">
            <field name="name">todo_view_list</field>
            <field name="model">open_academy.todo</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="todo_view_form" model="ir.ui.view">
            <field name="name">todo_view_form</field>
            <field name="model">open_academy.todo</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="is_done"/>
                        <field name="is_active"/>
                        <field name="description"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="todo_action_list" model="ir.actions.act_window">
            <field name="name">todo_action_list</field>
            <field name="res_model">open_academy.todo</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="todo_menu_list" name="Todo List" action="todo_action_list"/>
    </data>
</odoo>