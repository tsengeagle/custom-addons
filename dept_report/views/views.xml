<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="dept_report.department_list">
            <field name="name">Department list</field>
            <field name="model">dept_report.department</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="costNo"/>
                </tree>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="dept_report.departments_action_window">
            <field name="name">Department window</field>
            <field name="res_model">dept_report.department</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- server action to the one above -->
        <record model="ir.actions.server" id="dept_report.departments_action_server">
            <field name="name">Department server</field>
            <field name="model_id" ref="model_dept_report_department"/>
            <field name="code">
                action={
                "type":"ir.actions.act_window",
                "view_mode":"tree,form",
                "res_model":self._name,
                }
            </field>
        </record>

        <!-- Top menu item -->
        <menuitem name="DeptReport" id="dept_report.menu_root"/>
        <!-- menu categories -->
        <menuitem name="Departments" id="dept_report.departments" parent="dept_report.menu_root"/>

        <!-- actions -->
        <menuitem name="List" id="dept_report.departments_list" parent="dept_report.departments"
                  action="dept_report.departments_action_window"/>
    </data>
</odoo>