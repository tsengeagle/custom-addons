<odoo>
    <data>
        <record model="ir.ui.view" id="department_form_view">
            <field name="name">department.form</field>
            <field name="model">dept_report.department</field>
            <field name="arch" type="xml">
                <form string="Department Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="costNo"/>
                        </group>
                        <notebood>
                            <page string="Comment">
                                <field name="comment"/>
                            </page>
                            <page string="About">
                                about something!
                            </page>
                        </notebood>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="department_list_action">
            <field name="name">Departments</field>
            <field name="res_model">dept_report.department</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="main_dept_report" name="Dept reports"/>

        <menuitem id="departments_list" name="Departments"
                  parant="main_dept_report"
                  action="department_list_action"/>

    </data>
</odoo>