<odoo>
    <data>
        <!-- View -->
        <record id="department_view_tree" model="ir.ui.view">
            <field name="name">Department tree view</field>
            <field name="model">operating_statement.department</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="cost_id"/>
                    <field name="account_name"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="department_action_list" model="ir.actions.act_window">
            <field name="name">Department list action</field>
            <field name="res_model">operating_statement.department</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu item -->
        <menuitem id="department_menu_list" name="Department List" action="department_action_list"/>
    </data>
</odoo>