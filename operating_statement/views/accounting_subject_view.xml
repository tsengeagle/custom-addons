<odoo>
    <data>
        <record id="accounting_subject_view_tree" model="ir.ui.view">
            <field name="name">Accounting subject list</field>
            <field name="model">operating_statement.accounting_subject</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="entries_name"/>
                </tree>
            </field>
        </record>

        <record id="accounting_subject_action_list" model="ir.actions.act_window">
            <field name="name">Accounting subject list action</field>
            <field name="res_model">operating_statement.accounting_subject</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="accounting_subject_menu_list" name="Accounting subject list" action="accounting_subject_action_list"/>
    </data>
</odoo>